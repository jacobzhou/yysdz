<%= stylesheets "site" %>
<div class="sign_content">
  <%= simple_form_for resource, :as => resource_name, :url => sign_in_path do |f| %>    
    <table width="100%">
      <tr>
        <td align="center" valign="middle" >
          <img src="/images/rah/img.png"/>
        </td><form action="/" method="post">  
        <td> 
          <table width="100%">
            <tr style="height: 50px;">
              <td></td>
              <td>用户登录&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            </tr>
            <tr style="height: 50px;">
              <td style="width: 20%;" align="right">用户名&nbsp;&nbsp;&nbsp;</td>
              <td>  
              <%= f.input_field "email", :class => "text", :style => "width:250px;height:25px;" %>
              </td>
            </tr>
            <tr style="height: 50px;">
              <td style="width: 20%;" align="right">密&nbsp;&nbsp;&nbsp;&nbsp;码&nbsp;&nbsp;&nbsp;</td>
              <td>
                <%= f.input_field "password", :class => "text", :style => "width:250px;height:25px;" %>
              </td>
            </tr>
            <tr style="height: 50px;">
              <td></td>
              <td>
                <%= f.button :submit, '登  录', :class=>"loginbutton" %>
                &nbsp;&nbsp;
                <%= link_to "注册", sign_up_path, :class => "registerbutton" %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  <% end -%>
</div>
