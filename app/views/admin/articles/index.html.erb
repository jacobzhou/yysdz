<section id="tables">
  <form class="well form-search">
    <%= render "search" %>
  </form>
  <div class="page-header">
    <%= link_to "添加文章", new_admin_article_path, :class => "btn btn-primary" %>

      <%= link_to "普通文章", admin_articles_path, :class => "btn btn-info" %>  

      <%= link_to "栏目页文章", admin_articles_path(:recommend => "1"), :class => "btn btn-info" %>

  </div>
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>序号</th>
        <th>标题</th>
        <th>栏目</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each_with_index do |article, index|%>
      <tr>
        <td><%= index_no(index, 30) %></td>
        <td>
          <%= image_tag(article.cover.url(:small)) if article.cover? %>
          <%= link_to_blank article.title, article %>
          <%= itag("未发布")  unless article.published %>
          <%= itag("动态",'important')  if article.dt %>
        </td>
        <td><%= article.catalog.path.map(&:name).join(" - ") %></td>
        <td><%= eda_links(article) %></td>
      </tr>
    <% end -%>
    </tbody>
  </table>
</div>
<%= paginate @articles %>
</section>
