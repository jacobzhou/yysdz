<section id="tables">
  <%= tips "服务角色下有技能不能删除" %>
  <div class="page-header">
    <%= link_to "添加角色", new_admin_role_url, :class => "btn btn-primary" %>
  </div>
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>序号</th>
        <th>名称</th>
        <th>类型</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% @roles.each_with_index do |role, index|%>
      <tr>
        <td><%= index_no(index, @roles.size) %></td>
        <td><%= role.name %></td>
        <td><%= role.lx %></td>
        <td>
          <%= link_to "修改", edit_admin_role_path(role) %>
          <%= link_to "删除", admin_role_path(role.id), :method => "delete", :confirm => "您确定吗？" unless role.skill %>
        </td>
      </tr>
    <% end -%>
    </tbody>
  </table>
</div>
<%= paginate @roles %>
</section>